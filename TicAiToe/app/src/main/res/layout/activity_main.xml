<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/back"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignStart="@+id/text_view_result"
        android:layout_alignEnd="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="-29dp"
        android:layout_marginEnd="16dp"
        android:gravity="top"
        android:onClick="exit"
        android:text="Back"
        android:textColor="#32A9F9"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/title"
        app:layout_constraintHorizontal_bias="0.183"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="134dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:font="@font/interblack"
        android:gravity="center_horizontal|top"
        android:text="TicAiToe"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginBottom="89dp"
        android:layout_above="@+id/button_restart"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@color/colorAccent"
        tools:text="Computer Won"
        android:font="@font/interregular"
        android:id="@+id/text_view_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:layout_marginEnd="103dp"
        android:layout_marginStart="106dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <GridLayout
        android:padding="16dp"
        android:alignmentMode="alignBounds"
        android:useDefaultMargins="true"
        android:rowCount="3"
        android:columnCount="3"
        android:id="@+id/layout_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:radius="4dp"
        android:layout_marginTop="200dp"
        android:layout_centerInParent="true" />

    <Button
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/button_restart"
        android:textAllCaps="false"
        android:text="Restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>